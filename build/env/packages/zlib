#!/bin/sh
# This file is automatically generated by fs-package
set -e

PACKAGE=zlib-1.3.1
CHECKSUM=9a93b2b7dfdac77ceba5a558a580e74667dd6fede4585b91eefb60f03b72df23
REVISION=0

. build/env/scripts/package.sh

build/env/scripts/download.py \
https://zlib.net/fossils/$PACKAGE.tar.gz \
sha256:$CHECKSUM

rm -Rf build/env/_temp && mkdir build/env/_temp && cd build/env/_temp
tar xf ../_sources/$PACKAGE.tar.gz
cd $PACKAGE

if [ "`uname -o`" = "Msys" ]; then
make -f win32/Makefile.gcc
make -f win32/Makefile.gcc \
BINARY_PATH=$PREFIX/bin \
INCLUDE_PATH=$PREFIX/include \
LIBRARY_PATH=$PREFIX/lib \
SHARED_MODE=1 \
install
else
./configure --prefix=$PREFIX
make
make install
fi

touch $INSTALLED
