#!/bin/sh
# This file is automatically generated by fs-package
set -e

PACKAGE=libiconv-1.18
CHECKSUM=3b08f5f4f9b4eb82f151a7040bfd6fe6c6fb922efe4b1659c66ea933276965e8
REVISION=0

. build/env/scripts/package.sh

build/env/scripts/download.py \
https://ftp.gnu.org/pub/gnu/libiconv/$PACKAGE.tar.gz \
sha256:$CHECKSUM

rm -Rf build/env/_temp && mkdir build/env/_temp && cd build/env/_temp
tar xf ../_sources/$PACKAGE.tar.gz
cd $PACKAGE

./configure --prefix=$PREFIX
make
make install

# if [ "$SYSTEM_OS" = "macOS" ]; then
# DYLIB=libiconv.2.dylib
# install_name_tool -id @rpath/$DYLIB $FSENV_PREFIX/lib/$DYLIB
# fi

touch $INSTALLED
