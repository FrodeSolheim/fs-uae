#!/bin/sh

set -e

PROJECT_DIR="$(cd "$(dirname "$0")/.." && pwd)"
echo "PROJECT_DIR: $PROJECT_DIR"
cd "$PROJECT_DIR"

BUILD_DIR="$PROJECT_DIR/.build/dev"
echo "BUILD_DIR: $BUILD_DIR"

echo
echo Running "$PROJECT_DIR/configure" "$@"
echo

mkdir -p "$BUILD_DIR"
cd "$BUILD_DIR"
"$PROJECT_DIR/configure" "$@"
