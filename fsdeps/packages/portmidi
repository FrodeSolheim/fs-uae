# -----------------------------------------------------------------------------

if [ "`uname -o`" = "Msys" ]; then
cmake \
-G "MSYS Makefiles" \
-DCMAKE_INSTALL_PREFIX=$PREFIX \
.
else
cmake \
-DCMAKE_INSTALL_PREFIX=$PREFIX \
.
fi
make
make install

if [ "`uname`" = "Darwin" ]; then
echo "Fixing dylib install name"
# install_name_tool -change \
# libportmidi.0.dylib \
# $PREFIX/lib/libportmidi.0.dylib \
# $PREFIX/lib/libportmidi.0.dylib
install_name_tool -id \
$PREFIX/lib/libportmidi.0.dylib \
$PREFIX/lib/libportmidi.0.dylib
fi

touch $INSTALLED
