	autoconf \
	automake \
	gcc \
	gettext \
	libdecor-devel \
	libdrm-devel \
	libgbm-devel \
	libtool \
	libXext-devel \
	libXi-devel \
	libxkbcommon-devel \
	meson \
	patchelf \
	SDL2-devel \
	wayland-devel \
	zip
