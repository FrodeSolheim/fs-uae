#!/bin/sh
# --------------------------------------------------------------------------------------------------
set -e
# --------------------------------------------------------------------------------------------------

# Dependency: pulseaudio?
# Dependency: wayland?

PACKAGE=mpg123-1.33.2
PACKAGE_REVISION=0
PACKAGE_URL=https://deac-fra.dl.sourceforge.net/project/mpg123/mpg123/1.33.2/mpg123-1.33.2.tar.bz2
PACKAGE_CHECKSUM=2c54fabbfa696dce8f9b137c8ef7a429a061f8fe633cd7d0a511809855f2c219

# --------------------------------------------------------------------------------------------------
. "$PACKAGE_PRE"
# --------------------------------------------------------------------------------------------------

tar xf "$PACKAGE_SOURCES/$PACKAGE.tar.bz2"
cd $PACKAGE

./configure --prefix=$PREFIX --without-ogg
make
make install

# --------------------------------------------------------------------------------------------------
. "$PACKAGE_POST"
# --------------------------------------------------------------------------------------------------
