#!/bin/sh
# This file is automatically generated by fs-package
set -e

build/env/packages/zlib

PACKAGE=libpng-1.6.47
CHECKSUM=b213cb381fbb1175327bd708a77aab708a05adde7b471bc267bd15ac99893631
REVISION=0

. build/env/scripts/package.sh

build/env/scripts/download.py \
https://downloads.sourceforge.net/project/libpng/libpng16/\
1.6.47/$PACKAGE.tar.xz \
sha256:$CHECKSUM

rm -Rf build/env/_temp && mkdir build/env/_temp && cd build/env/_temp
tar xf ../_sources/$PACKAGE.tar.xz
cd $PACKAGE

./configure --prefix=$PREFIX
make
make install

# if [ "$SYSTEM_OS" = "macOS" ]; then
# DYLIB=libpng16.16.dylib
# install_name_tool -id @rpath/$DYLIB $FSENV_PREFIX/lib/$DYLIB
# fi

touch $INSTALLED
