#!/bin/sh
# This file is automatically generated by fs-package
set -e

# Dependency: pulseaudio?
# Dependency: wayland?

PACKAGE=SDL2-2.0.22
CHECKSUM=fe7cbf3127882e3fc7259a75a0cb585620272c51745d3852ab9dd87960697f2e
REVISION=1

. fsdeps/dep.sh

