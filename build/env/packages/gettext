#!/bin/sh
# This file is automatically generated by fs-package
set -e

# FIXME: libiconv (except on macOS) ??

PACKAGE=gettext-0.25
CHECKSUM=aee02dab79d9138fdcc7226b67ec985121bce6007edebe30d0e39d42f69a340e
REVISION=0

. build/env/scripts/package.sh

build/env/scripts/download.py \
https://ftp.gnu.org/pub/gnu/gettext/$PACKAGE.tar.gz \
sha256:$CHECKSUM

rm -Rf build/env/_temp && mkdir build/env/_temp && cd build/env/_temp
tar xf ../_sources/$PACKAGE.tar.gz
cd $PACKAGE

# ./configure --prefix=$PREFIX \
# --disable-java
cd gettext-runtime
./configure --prefix=$PREFIX \
--disable-csharp \
--disable-java
make
make install

# if [ "$SYSTEM_OS" = "macOS" ]; then
# DYLIB=libintl.8.dylib
# install_name_tool -id @rpath/$DYLIB $PREFIX/lib/$DYLIB
# fi

touch $INSTALLED
