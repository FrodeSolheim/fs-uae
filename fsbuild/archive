#!/bin/sh
# This file is automatically generated by fs-package

set -e

. ./PACKAGE.FS
. fsbuild/system.sh

if [ $PACKAGE_TYPE = "fs-data-plugin" ]; then
OS=Any
ARCH=Any
else
OS=$SYSTEM_OS
ARCH=$SYSTEM_ARCH
fi

mkdir -p fsbuild/_dist

cd fsbuild/_build

if [ "$SYSTEM_OS" = "Windows" ]; then
ARCHIVE=${PACKAGE_NAME_PRETTY}_${PACKAGE_VERSION}_${OS}_${ARCH}.zip
zip -r ../_dist/$ARCHIVE ${PACKAGE_NAME_PRETTY}
else
ARCHIVE=${PACKAGE_NAME_PRETTY}_${PACKAGE_VERSION}_${OS}_${ARCH}.tar.xz
tar cfJv ../_dist/$ARCHIVE ${PACKAGE_NAME_PRETTY}
fi

echo -------------------------------------------------------------------------\
-------
echo "[FSBUILD]Â Archived fsbuild/_dist/$ARCHIVE"
