#!/bin/sh
# This file is automatically generated by fs-package
set -e

build/env/packages/freetype
build/env/packages/SDL2

PACKAGE=SDL2_ttf-2.24.0
CHECKSUM=0b2bf1e7b6568adbdbc9bb924643f79d9dedafe061fa1ed687d1d9ac4e453bfd
REVISION=0

. build/env/scripts/package.sh

build/env/scripts/download.py \
https://www.libsdl.org/projects/SDL_ttf/release/$PACKAGE.tar.gz \
sha256:$CHECKSUM

rm -Rf build/env/_temp && mkdir build/env/_temp && cd build/env/_temp
tar xf ../_sources/$PACKAGE.tar.gz
cd $PACKAGE

./configure --prefix=$PREFIX
make
make install

touch $INSTALLED
