#!/bin/sh
# This file is automatically generated by fs-package
set -e

# Dependency: libsndfile?

PACKAGE=libsamplerate-0.2.2
CHECKSUM=3258da280511d24b49d6b08615bbe824d0cacc9842b0e4caf11c52cf2b043893
REVISION=0

. "$BUILD_ENV_DIR/scripts/package.sh"

"$BUILD_ENV_DIR/scripts/download.py" \
https://github.com/libsndfile/libsamplerate/releases/download/0.2.2/\
$PACKAGE.tar.xz \
sha256:$CHECKSUM

tar xf "$BUILD_ENV_DIR/_sources/$PACKAGE.tar.xz"
cd $PACKAGE

./configure --prefix=$PREFIX
make
make install

# if [ "$SYSTEM_OS" = "macOS" ]; then
# DYLIB=libsamplerate.0.dylib
# install_name_tool -id @rpath/$DYLIB $PREFIX/lib/$DYLIB
# fi

touch $INSTALLED
