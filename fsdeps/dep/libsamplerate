#!/bin/sh
set -e

# Dependency: libsndfile?

PACKAGE=libsamplerate-0.2.1
CHECKSUM=f6323b5e234753579d70a0af27796dde4ebeddf58aae4be598e39b3cee00c90a
REVISION=0

. fsdeps/dep.sh

python3 fsdeps/download.py \
https://github.com/libsndfile/libsamplerate/releases/download/0.2.1/\
$PACKAGE.tar.bz2 \
sha256:$CHECKSUM

rm -Rf fsdeps/_build && mkdir fsdeps/_build && cd fsdeps/_build
tar xf ../_sources/$PACKAGE.tar.bz2
cd $PACKAGE

./configure --prefix=$PREFIX
make
make install

touch $INSTALLED
